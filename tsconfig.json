{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@app/*": ["app/*"],
      "@core/*": ["app/core/*"],
      "@domain/*": ["app/domain/*"],
      "@features/*": ["app/features/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
